{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/db/(.*)": "<rootDir>/../libs/db/src/$1",
    "@app/db": "<rootDir>/../libs/db/src",
    "@app/configuration/(.*)": "<rootDir>/../libs/configuration/src/$1",
    "@app/configuration": "<rootDir>/../libs/configuration/src",
    "@app/mailer/(.*)": "<rootDir>/../libs/mailer/src/$1",
    "@app/mailer": "<rootDir>/../libs/mailer/src"
  }
}
